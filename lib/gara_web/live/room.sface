<div class="content">
     {#if @open}
     <h2>Room {@stat[:topic]} is open</h2>
     <ul>
     <li>Opened since: {inspect(@stat[:since])}</li>
     <li>Total participants: {to_string(@stat[:people])}</li>
     <li>Active participants: {to_string(@stat[:active])}</li>
     </ul>
     {#else}
     <h2>Room not found</h2>
     {/if}
</div>
